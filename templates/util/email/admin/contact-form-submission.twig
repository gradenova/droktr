{% extends 'util/email/email.twig' %}

{% block title %}
  We've recieved a new ToDone contact form submission.
{% endblock %}

{% block main %}
  <p>We recieved a new contact form submission. </p>
  <hr>
  <table>
    <tr>
      <th>Submission ID</th>
      <td>{{ submission.id }}</td>
    </tr>
    <tr>
      <th>Name</th>
      <td>{{ submission.name }}</td>
    </tr>
    <tr>
      <th>Email</th>
      <td>{{ submission.email }}</td>
    </tr>
    <tr>
      <th>Subject</th>
      <td>{{ submission.subject }}</td>
    </tr>
    <tr>
      <th>Message</th>
      <td>{{ submission.message }}</td>
    </tr>
    <tr>
      <th>Time Recieved</th>
      <td>{{ submission.sentAt|date('F j, Y g:i:s a')  }}</td>
    </tr>
  </table>
  <hr>
{% endblock %}