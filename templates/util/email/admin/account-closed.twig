{% extends 'util/email/email.twig' %} 

{% block title %}A ToDone user has closed their account.{% endblock %}

{% block main %}
<p>{{ user.firstName }} {{ user.lastName }}, has closed their account.</p>
<hr>
<table>
    <tr>
      <th>User ID</th>
      <td>{{ user.id }}</td>
    </tr>
    <tr>
      <th>Name</th>
      <td>{{ user.firstName }} {{ user.lastName }}</td>
    </tr>
    <tr>
      <th>Email</th>
      <td>{{ user.email }}</td>
    </tr>
    <tr>
      <th>Phone</th>
      <td>{{ user.phone }}</td>
    </tr>
    <tr>
      <th>Country</th>
      <td>{{ user.country }}</td>
    </tr>
    <tr>
      <th>Gender</th>
      <td>{{ user.gender }}</td>
    </tr>
  </table>
<hr>
{% endblock %}
