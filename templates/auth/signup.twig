{#
@name:          signup.twig
@description:   Base template for the entire front portion of the site.
#}

{% extends 'auth.twig' %}
{% block bodyClass %}signup{% endblock %}
{% set active = '' %}
{% block main %}
	<div class='columns'>
	<div class='column is-4'>
		<h1 class="title has-text-grey-dark">Sign Up</h1>
		<p class='subtitle'>Welcome! We're going to be great friends!</p>
	</div>
	<div class='column is-6 is-offset-2'>
		<signup inline-template>
			{{ form_start(signup, {'attr': {'id': 'signup'}}) }}
		<div class="field is-horizontal">
			<div class='field-label is-normal'>
  			<label class="label has-text-light">Username<sup>*</sup></label>
			</div>
			<div class='field-body'>
				<div class='field'>
					<div class="control has-icons-left">
						{{ form_widget(signup.username, {'attr': {'v-model': "user", 'v-bind:class': "{'is-primary': attemptedSubmit && userStatus}", 'placeholder': 'Username', 'class': 'input' }}) }}
						<span class="icon is-small is-left">
							<i class="fa fa-user"></i>
						</span>
					</div>
				</div>
			</div>
		</div>			
		<div class="field is-horizontal">
			<div class='field-label is-normal'>
  			<label class="label has-text-light">Email<sup>*</sup></label>
			</div>
			<div class='field-body'>
				<div class='field'>
  				<div class="control has-icons-left">
							{{ form_widget(signup.email, {'attr': {'v-model': "email", 'v-bind:class': "{'is-primary': attemptedSubmit && emailStatus}", 'placeholder': 'Email', 'class': 'input' }}) }}
    				<span class="icon is-small is-left">
      				<i class="fa fa-envelope"></i>
    				</span>
  				</div>
				</div>
			</div>
		</div>
		<div class="field is-horizontal">
			<div class='field-label is-normal has-text-light'>
  			<label class="label has-text-light">Password<sup>*</sup></label>
			</div>
			<div class='field-body'>
				<div class='field'>
					<div class="control has-icons-left">
						{{ form_widget(signup.password.first, {'attr': {'v-model': "pass", 'v-bind:class': "{'is-primary': attemptedSubmit && passStatus}", 'placeholder': 'Password', 'class': 'input' }}) }}
						<span class="icon is-small is-left">
      				<i class="fa fa-key"></i>
    				</span>
					</div>
				</div>
				<div class='field'>
					<div class="control has-icons-left">
						{{ form_widget(signup.password.second, {'attr': {'v-model': "rpass",'v-on:blur': "validatePasswords", 'v-bind:class': "{'is-primary': identical && attemptedRpass || attemptedSubmit && rpassStatus}", 'placeholder': 'Repeat Password', 'class': 'input' }}) }}
						<span class="icon is-small is-left">
      				<i class="fa fa-key"></i>
    				</span>
					</div>
				</div>
			</div>
		</div>
		<div class="field is-horizontal">
			<div class='field-label is-normal has-text-light'>
  			<label class="label has-text-light">Your name<sup>*</sup></label>
			</div>
			<div class='field-body'>
				<div class='field'>
					<div class="control has-icons-left">
						{{ form_widget(signup.fname, {'attr': {'v-model': "fname", 'v-bind:class': "{'is-primary': attemptedSubmit && fnameStatus}", 'placeholder': 'First Name', 'class': 'input' }}) }}
						<span class="icon is-small is-left">
      				<i class="fa fa-user"></i>
    				</span>
					</div>
				</div>
				<div class='field'>
					<div class="control has-icons-left">
						{{ form_widget(signup.lname, {'attr': {'v-model': "lname", 'v-bind:class': "{'is-primary': attemptedSubmit && lnameStatus}", 'placeholder': 'Last Name', 'class': 'input' }}) }}
						<span class="icon is-small is-left">
      				<i class="fa fa-user"></i>
    				</span>
					</div>
				</div>
			</div>
		</div>
		<div class="field is-horizontal">
			<div class='field-label is-normal has-text-light'>
  			<label class="label has-text-light">Country<sup>*</sup></label>
			</div>
			<div class='field-body'>
				<div class='field'>
					<div class="control has-icons-left">
						<div class="select is-rounded">
						{{ form_widget(signup.country, {'attr': {'class': 'select' }}) }}
						<span class="icon is-small is-left">
      				<i class="fa fa-globe"></i>
    				</span>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="field is-horizontal">
			<div class='field-label is-normal has-text-light'>
  			<label class="label has-text-light">Gender<sup>*</sup></label>
			</div>
			<div class='field-body'>
				<div class='field'>
					<div class="control has-icons-left">
						<div class="select is-rounded">
						{{ form_widget(signup.gender, {'attr': {'class': 'select' }}) }}
						<span class="icon is-small is-left">
      				<i class="fa fa-venus"></i>
    				</span>
						</div>						
					</div>
				</div>
			</div>
		</div>
		<div class="field is-pulled-right">
  		<div class="control">
				{{ form_widget(signup.submit, {'attr': {'v-on:click': "validateForm", 'class': 'button is-primary' }}) }}
  		</div>
		</div>
		<div class="show formsent is-pulled-left">
			{{ form_errors(signup.username) }}
			{{ form_errors(signup.email) }}
			{{ form_errors(signup.password) }}
			{{ form_errors(signup.fname) }}
	  	{{ form_errors(signup.lname) }}
		  {{ form_errors(signup.country) }}
			{{ form_errors(signup.gender) }}
		</div>

		{{ form_end(signup) }}
		</signup>
		</div>
</div>
{% endblock %}	