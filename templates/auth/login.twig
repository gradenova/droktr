{#
@name:          login.twig
@description:   Base template for the entire front portion of the site.
#}

<!DOCTYPE html>
<html lang="en">	
<head>	
  <title>{% block title %}ToDo!{% endblock %}</title>
  <meta name="description" content="{% block description %}To do lists Yay!{% endblock %}">
  <meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link rel="shortcut icon" href="images/favicon.png">
  {% block assets %}
			<link rel="stylesheet" href="build/front.css">
			{% block pageAssets %}{% endblock %}
	{% endblock %}
</head>
<body class='auth {% block bodyClass %}login{% endblock %}'>
	<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
    <label for="inputUsername" class="sr-only">Username</label>
    <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" placeholder="Username" required autofocus>
    <label for="inputPassword" class="sr-only">Password</label>
    <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="btn btn-lg btn-primary" type="submit">
        Sign in
    </button>
</form>
{% block scripts %}
	<script src="build/front.js"></script>
	{% block pageScripts %}{% endblock %}
{% endblock %}	
</body>
</html>