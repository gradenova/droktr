{#
@name: forgot.twig
@description: The template for the forgot page.
#}

{% extends 'auth.twig' %}
{% block bodyClass %}forgot{% endblock %}
{% set active = '' %}
{% block main %}
<div class='columns'>
	<div class='headingbox column is-4'>
		<h1 class="title has-text-grey-dark">Forgot Password</h1>
		<p class='subtitle'>Don't worry about it. We'll get it changed for you. Simply provide the email you used to sign up with, and we'll email you further instructions.</p>
	</div>
	<div class='column is-6 is-offset-2'>
		<forgot inline-template>
		{{ form_start(forgot) }}
		<div class="field">		
				<div class="control has-icons-left">
						{{ form_widget(forgot.email, {'attr': {'v-model': "user", 'v-bind:class': "{'is-primary': attempted && userStatus}" }}) }}
						<span class="icon is-small is-left">
							<i class="fa fa-envelope"></i>
						</span>
					</div>
				</div>
		{% if response != null %}
				<div class="show formsent notification is-primary is-pulled-left m-left-0">{{ response }}</div>
		{% endif %}
			{{ form_widget(forgot.submit, {'attr': {'v-on:click': "validateForm"}}) }}
		{{ form_end(forgot) }}
		</forgot>
	</div>
</div>

{% endblock %}